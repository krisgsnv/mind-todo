{
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest-setup.ts"],
    "transform": {
        "^.+\\.(ts|tsx)?$": "ts-jest",
        "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleNameMapper": {
        "@/(.*)": "<rootDir>/src/$1",
        "\\.(css)$": "<rootDir>/src/shared/__mocks__/styleMock.ts"
    }
}
